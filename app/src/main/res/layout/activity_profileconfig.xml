<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profileconfig"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="@color/colorBlueBackground"
    tools:context="com.example.maxime.messengerapp.activity.ProfileConfigActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0sp"
        android:id="@+id/LinearLayout1">
        <EditText
            android:id="@+id/email"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="e-mail"
            android:padding="15sp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="30sp"/>
        <EditText
            android:id="@+id/pwd"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:textSize="20sp"
            android:padding="15sp"
            android:inputType="textPassword"
            android:layout_marginBottom="30sp"/>
        <EditText
            android:id="@+id/pwdConf"
            android:layout_below="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:textSize="20sp"
            android:padding="15sp"
            android:inputType="textPassword"
            android:layout_marginBottom="30sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pwdConf"
            android:gravity="center"
            android:text="Profile Image Upload"
            android:id="@+id/ButtonImage"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="50sp"
            android:padding="10sp"
            android:layout_marginTop="10sp"/>
        <ImageView
            android:id="@+id/imageProfile"
            android:gravity="center"
            android:layout_below="@+id/ButtonImage"
            android:layout_width="10sp"
            android:layout_height="10sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save profile modifications"
            android:id="@+id/ButtonSave"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="50sp"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/pwdConf"/>
    </LinearLayout>

    </RelativeLayout>